<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arifinfrds.papbl_sqlite.ui.barang.BarangFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Input Data Barang"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/barangNameEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:hint="Nama Barang"
                    android:inputType="textPersonName"
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintRight_toRightOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/barangBrandEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Brand"
                    android:inputType="textPersonName"
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintRight_toRightOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/barangNameEditText" />

                <EditText
                    android:id="@+id/barangIdEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="ID Barang"
                    android:inputType="number"
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintRight_toRightOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Gunakan ID Jurusan untuk menghapus atau mengupdate data barang."
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintRight_toRightOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/barangBrandEditText" />

                <Button
                    android:id="@+id/insertButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Insert"
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/barangIdEditText" />

                <Button
                    android:id="@+id/viewAllButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="View All"
                    app:layout_constraintLeft_toRightOf="@+id/insertButton"
                    app:layout_constraintTop_toBottomOf="@+id/barangIdEditText" />

                <Button
                    android:id="@+id/updateButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Update"
                    app:layout_constraintLeft_toRightOf="@+id/viewAllButton"
                    app:layout_constraintTop_toBottomOf="@+id/barangIdEditText" />

                <Button
                    android:id="@+id/deleteButton"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Delete"
                    app:layout_constraintLeft_toLeftOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/viewAllButton" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
